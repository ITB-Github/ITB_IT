<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ITPointViewWPF">
    <Style x:Key="TeamNameStyle" TargetType="TextBlock">
        
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="#FF112233"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" 
                                  Direction="135" 
                                  BlurRadius="5"
                                  Color="#fff"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PointStyle" TargetType="TextBlock">

        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="#FF112233"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" 
                                  Direction="135" 
                                  BlurRadius="5"
                                  Color="#fff"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>